    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.css" integrity="sha512-0p3K0H3S6Q4bEWZ/WmC94Tgit2ular2/n0ESdfEX8l172YyQj8re1Wu9s/HT9T/T2osUw5Gx/6pAZNk3UKbESw==" crossorigin="anonymous" />
</head>
<body>

	<div id ="container">

<div id ="logo">
<img src="./images/SocioFy_logo.png">
<h1>SocioFy</h1>

</div>
 <div class="ui vertical divider" style="height: 40%;">
  </div>
<form action="/create-session" method="POST">
<div id ="signIn">
    <h1> Welcome !</h1>
<div class="ui labeled input">
  <div class="ui label">
    email
  </div>
  <input type="email" name="email" placeholder="SocioFy" required>
</div>
<div class="ui labeled input">
  <div class="ui label">
    password
  </div>
  <input type="password" name = "password" placeholder="SocioFy" required>
</div>
<a href=""> Forgot password</a>


<div class="ui buttons">
  <input id = "log-in" class="ui positive button" value="LogIn" type="submit"></input>
</form>
  <div class="or"></div>

  <input id ="sign-up" type ="button" value="SignUp" class="ui button"></button>

  
</div>
<br>
<button class="ui google plus button">
  <i class="google plus icon"></i>
<a href="/users/auth/google">login with G+</a>
  
</button>



   


<div class="ui modal">
  <div class="header">Registration</div>
   <div class="content">
       <form action="/create-user" method="POST">
  
<div class="ui labeled input">
  <div class="ui label">
    email
  </div>
  <input type="email" name="email" placeholder="SocioFy" required>
</div>
<div class="ui labeled input">
        <div class="ui label">
          password
        </div>
        <input type="password" name="password" placeholder="SocioFy" required>
      </div>
      <div class="ui labeled input">
        <div class="ui label">
           confirm
        </div>
        <input type="password" name="confirm" placeholder="SocioFy" required>
      </div>
      <button class="ui primary button" type="submit">Submit</button>
      </form>

      
  </div>
</div>


	



</body>
<script
  src="https://code.jquery.com/jquery-3.5.1.min.js"
